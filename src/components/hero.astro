---
import { Picture } from "astro:assets";
import heroImage from "assets/noi.webp"; // Path to the image in the static folder
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon/components";
---

<main
  class="flex flex-col-reverse lg:flex-row-reverse items-center gap-x-10 pt-16  md:pt-4 ">
  <div class="py-6 basis-3/4">
    <Picture
      src={heroImage}
      alt="Foto movi"
      width={1920}
      height={1080}
      quality="80"
      format="webp"     
      class="max-h-screen rounded-lg shadow-xl w-full"
    />
  </div>
  <div class="basis-1/4">
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      Movimento Giovanile
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      Siamo un'associazione che nasce nel cuore di Centallo nel 1989, come luogo di aggregazione della comunit√† Centallese negli storici spazi del Movi.
    </p>
    
  </div>
</main>


