---
import Container from "@components/container.astro";
import Link from "@components/ui/link.astro";
import Dropdown from "./dropdown.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";

const menuitems = [
{
    title: "Progetti",
    path: "/progetti",
  },
  {
    title: "Contatti",
    path: "/contatti",
  }, 
  {
    title: "Amici",
    path: "/amici",
  }
 
];
---

<div class="container mx-auto lg:px-0">
  <header class=" flex flex-col lg:flex-row justify-start items-center gap-6 mt-4">
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <a href="/" class="text-lg">
          <img src="/img/MoviLogo.png" alt="Logo" class="w-36" />
        </a>
        <div class="block lg:hidden">
          <MenuIcon class="w-4 h-4 text-gray-800" />
        </div>
      </div>
      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
        <ul class="flex flex-col lg:flex-row lg:gap-3 pl-0">
          {
            menuitems.map((item, index) => (
              <>              

                  <li>
                    <a
                      href={item.path}
                      class="flex lg:px-3 py-2 items-left text-gray-600 hover:text-gray-900">
                      <span> {item.title}</span>
                     
                    </a>
                  </li>
                
              </>
            ))
          }
        </ul>
        
      </MenuItems>
    </Astronav>
    
  </header>
</div>
