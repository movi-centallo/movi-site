---
import { documentToHtmlString } from "@contentful/rich-text-html-renderer";


const { entry, title } = Astro.props;
entry.fields.startingDate = new Date(entry.fields.startingDate);
const monthNames = [
  "gennaio", "febbraio", "marzo", "aprile", "maggio", "giugno",
  "luglio", "agosto", "settembre", "ottobre", "novembre", "dicembre"
];

---

<section class="my-20">
    {title && <h1 class="text-s font-bold pb-3 underline decoration-pink-500/30">{title}</h1>
    <div class="grid lg:grid-cols-2 gap-4 md:grid-cols-1"></div>}
    

<div class="max-w-md h-fit mx-auto bg-white rounded-xl shadow-md overflow-hidden md:max-w-2xl m-3">
    <div class="p-4 flex flex-row gap-3 items-center h-full">
        <div class="outline outline-2 outline-primary p-2 rounded-lg">
            <div class="flex flex-col gap-2 w-full h-full items-center text-center">
                
               <div class="flex flex-col items-center">
                    <p class="text-4xl font-bold text-primary">{entry.fields.startingDate.getDate()}</p>
                    <p class="text-sm text-primary">{monthNames[entry.fields.startingDate.getMonth()]} {entry.fields.startingDate.getFullYear()}</p>
               </div>
               <div class="outline outline-offset-2	 rounded-lg">    
                    <span class="icon-[mdi-light--clock]"></span>
                    {entry.fields.startingDate.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' })}
                </div>
            </div>
        </div>
        <div class="ml-4">
            <div class="uppercase tracking-wide text-3xl text-black font-semibold">{entry.fields.eventName} </div>         
            
            <p class="block mt-1 text-sm leading-tight font-medium text-gray-700">{entry.fields.caption}</p>
            
        </div>
    </div>
    </div>
</section>